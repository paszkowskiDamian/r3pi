{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "rewrites": [
        {
            "source": "**",
            "destination": "/index.html"
        }
    ]
}